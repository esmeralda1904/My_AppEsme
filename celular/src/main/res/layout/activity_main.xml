<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <!-- Rosa pastel -->
    <Button
        android:id="@+id/boton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Conectar con reloj"
        android:backgroundTint="#F48FB1"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

    <!-- Morado elegante -->

    <!-- Gris suave -->
    <TextView
        android:id="@+id/textinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Estado de conexiÃ³n"
        android:textColor="#6A1B9A"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textDetalles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:textColor="#9E9E9E" />

    <!-- Fondo rosa muy claro -->
    <TextView
        android:id="@+id/textDatos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" A la espera de datos del reloj..."
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_marginTop="24dp"
        android:background="#FCE4EC"
        android:textColor="#AD1457" />

    <!-- Azul pastel -->
    <Button
        android:id="@+id/botonEnviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#81D4FA"
        android:padding="12dp"
        android:text="Registrar datos"
        android:textColor="@android:color/white" />

</LinearLayout>
